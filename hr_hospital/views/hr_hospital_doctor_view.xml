<odoo>

    <record id="hr_hospital_doctor_view_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.search</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <search string="Doctors Search">
                <filter name="mentors" string="Only mentors" 
                    domain="[('is_intern','=',False)]"/>
                <filter name="interns" string="Only interns" 
                    domain="[('is_intern','=',True)]"/>
            </search>
        </field>
    </record>

    <record id="hr_hospital_doctor_view_list" model="ir.ui.view">
        <field name="name">Doctors</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <list string="Doctors">
                <header>
                    <button name="%(action_mass_reassign_doctor_wizard)d"
                            string="Mass reassign doctors"
                            type="action"
                            class="oe_highlight"
                            display="always"/>
                </header>
                <field name="name"/>
                <field name="specialization_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_doctor_view_form" model="ir.ui.view">
        <field name="name">Doctor</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <header>                    
                    <button name="%(action_doctor_report)d" 
                        string="Doctor Report"
                        type="action"
                        class="btn-primary" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="middle_name"/>                        
                            <field name="phone"/>
                            <field name="birth_date"/>
                            <field name="age"/>
                            <field name="gender"/>
                        </group>
                        <group>                        
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="active"/>
                            <field name="citizenship_country_id"/>
                            <field name="language_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Doctor details">
                            <group>
                                <field name="specialization_id"/>
                                <field name="education_country_id"/>
                                <field name="license_number"/>
                                <field name="license_issue_date"/>
                                <field name="rating"/>
                                <field name="is_intern"/>
                                <field name="mentor_id"/>
                            </group>
                        </page>
                        <page string="Interns">
                            <field name="intern_ids" nolabel="1" 
                                    context="{'default_mentor_id': id}">
                                <kanban>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div>
                                                <strong>
                                                    <field name="name"/>                                                        
                                                </strong>
                                            </div>
                                            <div>
                                                <field name="license_number"/>
                                            </div>
                                            <div>
                                                <field name="rating"/>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor_kanban_view" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.kanban</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <field name="specialization_id"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="intern_ids"/>
                <templates>
                    <t t-name="menu">
                        <div class="container">
                            <div class="row">
                                <div name="card_menu_view" class="col-6">
                                    <div role="menuitem">
                                        <a type="edit" class="dropdown-item">
                                            <i class="fa fa-pencil"/> Edit
                                        </a>
                                    </div>
                                </div>
                                <div name="card_menu_view" class="col-6">
                                    <div role="menuitem">
                                        <a type="delete" class="dropdown-item">
                                            <i class="fa fa-trash"/> Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-name="card">
                        <field name="active" invisible="1"/>
                        <strong>
                            <field name="first_name"/> <field name="last_name"/>
                        </strong>
                        <br/>
                        <span t-if="record.specialization_id.raw_value">
                            <field name="specialization_id"/>
                        </span><br/>
                        <span>
                            <field name="phone"/>
                        </span><br/>
                        <t t-if="record.intern_ids.rawv_value and record.intern_ids.raw_value.length">
                            <div class="mt-2">
                                <strong>Interns:</strong>
                                <field name="intern_ids" widget="many2many_tags"/>
                            </div>
                        </t>
                        <button type="object" name="action_create_visit_quick"
                                class="btn btn-primary btn-sm mt-2">
                            <i class="fa fa-calendar-plus-o"/> Add Visit
                        </button>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hr_hospital_doctor_action" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create first doctor!
            </p>
        </field>
    </record>
        
</odoo>
