<odoo>
  <record id="hr_hospital_patient_card_export_wizard_form" model="ir.ui.view">
    <field name="name">hr.hospital.patient.card.export.wizard.form</field>
    <field name="model">hr.hospital.patient.card.export.wizard</field>
    <field name="arch" type="xml">
      <form string="Export of medical card">
        <group>
          <field name="patient_id"/>
          <field name="date_from"/>
          <field name="date_to"/>
          <field name="lang_id"/>
          <field name="export_format"/>
        </group>
        <group>
          <field name="include_diagnoses"/>
          <field name="include_recommendations"/>
        </group>
        <footer>
          <button string="Export"
            name="action_export" 
            type="object" 
            class="btn-primary"/>
          <button string="Cancel"
            special="cancel"
            class="btn-secondary"/>
        </footer>
        <field name="export_file" invisible="1"/>
        <field name="export_filename" invisible="1"/>
        <div>
          <field name="export_file" filename="export_filename" widget="binary" readonly="1"/>
        </div>
      </form>
    </field>
  </record>

  <record id="action_hr_hospital_patient_card_export_wizard" model="ir.actions.act_window">
      <field name="name">Export of medical card</field>
      <field name="res_model">hr.hospital.patient.card.export.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
  </record>

</odoo>
