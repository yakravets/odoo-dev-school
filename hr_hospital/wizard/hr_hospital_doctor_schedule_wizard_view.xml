<odoo>
  <record id="hr_hospital_doctor_schedule_wizard_form" model="ir.ui.view">
    <field name="name">hr.hospital.doctor.schedule.wizard.form</field>
    <field name="model">hr.hospital.doctor.schedule.wizard</field>
    <field name="arch" type="xml">
      <form string="Doctor schedule generation">
        <group>
          <field name="doctor_id"/>
          <field name="date_start"/>
          <field name="week_count"/>
          <field name="schedule_type"/>
        </group>
        <group string="Days of the week">
          <field name="monday"/>
          <field name="tuesday"/>
          <field name="wednesday"/>
          <field name="thursday"/>
          <field name="friday"/>
          <field name="saturday"/>
          <field name="sunday"/>
        </group>
        <group string="Time">
          <field name="time_start"/>
          <field name="time_end"/>
          <field name="break_from"/>
          <field name="break_to"/>
        </group>
        <footer>
          <button string="Create a schedule" 
            type="object" 
            name="action_generate_schedule" 
            class="btn-primary"/>
          <button string="Cancel"
            class="btn-secondary" 
            special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_hr_hospital_doctor_schedule_wizard" model="ir.actions.act_window">
      <field name="name">Report of diseases</field>
      <field name="res_model">hr.hospital.disease.report.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
  </record>

</odoo>
